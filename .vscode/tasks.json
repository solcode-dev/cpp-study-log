{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "mkdir -p \"${fileDirname}/build\" && /usr/bin/g++ -fcolor-diagnostics -fansi-escape-codes -g \"${file}\" -o \"${fileDirname}/build/${fileBasenameNoExtension}\"",
            "args": [],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
